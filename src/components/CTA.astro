---
import { getLocaleFromUrl, t } from "../i18n/utils";

const locale = getLocaleFromUrl(Astro.url);
const i18n = t(locale);
---

<section class="cta-section">
    <div class="container">
        <div class="cta-card reveal">
            <div class="cta-glow" aria-hidden="true"></div>
            <div class="cta-content">
                <h2 class="cta-title">
                    {i18n.cta.title1}<br />{i18n.cta.title2}
                </h2>
                <p class="cta-desc">
                    {i18n.cta.desc1}<br />
                    {i18n.cta.desc2}
                </p>
                <div class="cta-actions">
                    <a
                        href="/PomoCal.dmg"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-primary btn-cta"
                    >
                        <svg
                            width="20"
                            height="20"
                            viewBox="0 0 20 20"
                            fill="none"
                        >
                            <path
                                d="M17.5 12.5V15.8333C17.5 16.2754 17.3244 16.6993 17.0118 17.0118C16.6993 17.3244 16.2754 17.5 15.8333 17.5H4.16667C3.72464 17.5 3.30072 17.3244 2.98816 17.0118C2.67559 16.6993 2.5 16.2754 2.5 15.8333V12.5"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                            <path
                                d="M5.83337 8.33337L10 12.5L14.1667 8.33337"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                            <path
                                d="M10 12.5V2.5"
                                stroke="currentColor"
                                stroke-width="1.5"
                                stroke-linecap="round"
                                stroke-linejoin="round"></path>
                        </svg>
                        {i18n.cta.button}
                    </a>
                    <span class="cta-meta">{i18n.cta.meta}</span>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .cta-section {
        padding: var(--space-3xl) 0 var(--space-2xl);
        background: var(--color-bg);
    }

    .cta-card {
        position: relative;
        background: linear-gradient(
            135deg,
            #1a1a2e 0%,
            #16213e 50%,
            #0f3460 100%
        );
        border-radius: 28px;
        padding: var(--space-5xl) var(--space-2xl);
        text-align: center;
        overflow: hidden;
        box-shadow:
            0 20px 60px rgba(15, 52, 96, 0.3),
            0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .cta-glow {
        position: absolute;
        inset: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .cta-glow::before {
        content: "";
        position: absolute;
        top: -40%;
        left: -10%;
        width: 500px;
        height: 500px;
        background: radial-gradient(
            circle,
            rgba(0, 122, 255, 0.25) 0%,
            transparent 65%
        );
        filter: blur(50px);
        animation: cta-float-1 10s ease-in-out infinite;
    }

    .cta-glow::after {
        content: "";
        position: absolute;
        bottom: -30%;
        right: -5%;
        width: 400px;
        height: 400px;
        background: radial-gradient(
            circle,
            rgba(175, 82, 222, 0.2) 0%,
            transparent 65%
        );
        filter: blur(50px);
        animation: cta-float-2 12s ease-in-out infinite;
    }

    @keyframes cta-float-1 {
        0%,
        100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(40px, 30px);
        }
    }

    @keyframes cta-float-2 {
        0%,
        100% {
            transform: translate(0, 0);
        }
        50% {
            transform: translate(-30px, -20px);
        }
    }

    .cta-content {
        position: relative;
        z-index: 1;
    }

    .cta-title {
        font-size: var(--font-size-4xl);
        font-weight: 800;
        color: #ffffff;
        letter-spacing: -0.025em;
        line-height: 1.2;
        margin-bottom: var(--space-md);
    }

    .cta-desc {
        font-size: var(--font-size-lg);
        color: rgba(255, 255, 255, 0.65);
        line-height: 1.7;
        margin-bottom: var(--space-2xl);
    }

    .cta-actions {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-md);
    }

    .btn-cta {
        padding: 16px 40px;
        font-size: var(--font-size-base);
        font-weight: 600;
        border-radius: var(--radius-full);
        background: #ffffff;
        color: #1a1a2e;
        border: none;
        box-shadow: 0 4px 20px rgba(0, 122, 255, 0.3);
        transition: all 0.3s ease;
    }

    .btn-cta:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0, 122, 255, 0.4);
        background: #f0f4ff;
        color: #1a1a2e;
    }

    .btn-cta svg {
        margin-right: 8px;
    }

    .cta-meta {
        font-size: var(--font-size-sm);
        color: rgba(255, 255, 255, 0.4);
    }

    @media (max-width: 768px) {
        .cta-card {
            padding: var(--space-3xl) var(--space-lg);
            border-radius: 20px;
        }

        .cta-title {
            font-size: var(--font-size-3xl);
        }

        .cta-desc {
            font-size: var(--font-size-base);
        }
    }
</style>
